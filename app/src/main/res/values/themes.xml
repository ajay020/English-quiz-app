<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="timerColorWarning">@color/timer_warning</item>
        <item name="android:statusBarColor">@color/classic_primary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Classic -->
    <style name="AppTheme.classic" parent="AppTheme">
        <item name="colorPrimary">@color/classic_primary</item>
        <item name="colorSecondary">@color/classic_secondary</item>
        <item name="android:windowBackground">@color/classic_background</item>
        <item name="android:textColor">@color/classic_text</item>
        <item name="colorAccent">@color/classic_accent</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="timerColorDefault">@color/classic_text</item>
    </style>

    <!-- Dark -->
    <style name="AppTheme.dark" parent="AppTheme">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="colorAccent">@color/dark_accent</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="timerColorDefault">@color/dark_text</item>

    </style>

    <!-- Nature -->
    <style name="AppTheme.nature" parent="AppTheme">
        <item name="colorPrimary">@color/nature_primary</item>
        <item name="colorSecondary">@color/nature_secondary</item>
        <item name="android:windowBackground">@color/nature_background</item>
        <item name="backgroundColor">@color/nature_background</item>
        <item name="android:textColor">@color/nature_text</item>
        <item name="colorOnPrimary">@color/nature_OnPrimary</item>
        <item name="colorAccent">@color/nature_accent</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="timerColorDefault">@color/nature_text</item>

    </style>

    <!-- Ocean -->
    <style name="AppTheme.ocean" parent="AppTheme">
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorSecondary">@color/ocean_secondary</item>
        <item name="android:windowBackground">@color/ocean_background</item>
        <item name="android:textColor">@color/ocean_text</item>
        <item name="colorAccent">@color/ocean_accent</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="timerColorDefault">@color/ocean_text</item>
    </style>

    <style name="DialogBaseLayout">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="FullWidthDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">40%</item> <!-- Landscape -->
        <item name="android:windowMinWidthMinor">80%</item> <!-- Portrait -->
        <item name="android:maxWidth">600dp</item> <!-- Cap width for tablets -->
    </style>

<!--    quiz activity control image button style -->
    <style name="CircularImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">?attr/android:textColor</item>
        <item name="android:background">@drawable/circular_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="OutlinedOptionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item> <!-- Border color -->
        <item name="strokeWidth">2dp</item> <!-- Border thickness -->
        <item name="android:textColor">?attr/android:textColor</item> <!-- Text color -->
        <item name="android:textSize">18sp</item> <!-- Adjust text size if needed -->
        <item name="cornerRadius">24dp</item> <!-- Rounded corners -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimary </item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_width">wrap_content </item>
        <item name="android:layout_height">wrap_content </item>
    </style>

</resources>