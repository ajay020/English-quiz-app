<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Audio Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:textSize="16sp" />
            <Switch
                android:id="@+id/switch_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Music Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textSize="16sp" />
            <Switch
                android:id="@+id/switch_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Theme Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Theme"
            android:textSize="16sp"
            android:paddingVertical="8dp" />
        <RadioGroup
            android:id="@+id/radio_group_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_theme_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light" />
            <RadioButton
                android:id="@+id/radio_theme_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark" />
        </RadioGroup>

        <!-- Question Count Slider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Questions per Level"
            android:textSize="16sp"
            android:paddingVertical="8dp" />
        <SeekBar
            android:id="@+id/slider_question_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="6"
            android:min="3"
            android:progress="3" />
        <TextView
            android:id="@+id/text_question_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="5"
            android:paddingTop="4dp" />

        <!-- Close Button -->
        <Button
            android:id="@+id/button_close_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Close" />
    </LinearLayout>
</ScrollView>
